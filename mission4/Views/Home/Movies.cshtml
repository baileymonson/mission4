
@{
    ViewData["Title"] = "Form";
}

@model mission4.Models.ApplicationResponse

<h1>@ViewData["Title"]</h1>

<p>Fill out and application here</p>
@*form to add another movie to the database*@
@*this page is also used for the edit page*@
<div>
    <form method="post" asp-controller="Home" asp-action="Movies">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            @*this stuff is used to loop through the movie categories*@
            <option value="">Select a Movie Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label>Title</label>
        <input asp-for="Title" />
        <br />

        <label>Director</label>
        <input asp-for="Director" />
        <br />

        <label>Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label>Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label>Lent To</label>
        <input asp-for="LentTo" />
        <br />

        <label>Notes</label>
        <input asp-for="Notes" />
        <br />
